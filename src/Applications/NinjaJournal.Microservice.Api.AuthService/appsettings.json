{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "IdentityServiceDbContext": "Host=localhost;Database=identity-db;Username=identity-db;Password=postgres",
  },
  "IdentityServer": {
    "ApiResources": [
      {
        "Name": "api-gateway-service",
        "DisplayName": "API Gateway Service",
        "Scopes": [
          "api-identity-service",
          "api-students-management-service"
        ]
      },
      {
        "Name": "api-identity-service",
        "DisplayName": "API Identity Service",
        "Scopes": [
          "api-identity-service"
        ]
      }
    ],
    "ApiScopes": [
      {
        "Name": "api-identity-service",
        "DisplayName": "API Identity Service"
      },
      {
        "Name": "api-students-management-service",
        "DisplayName": "API Students Management Service"
      }
    ],
    "Clients": [
      {
        "ClientId": "api_client",
        "ClientName": "API client",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequirePkce": true,
        "RequireClientSecret": false,
        "RedirectUris": [
          "http://localhost:7001/signin",
          "http://localhost:5000/oauth2-redirect.html",
          "http://localhost:5000/api/oauth2-redirect.html",
          "http://localhost:5002/oauth2-redirect.html",
          "http://localhost:5001/oauth2-redirect.html"
        ],
        "AllowedCorsOrigins": [
          "http://localhost:5000",
          "http://localhost:5001",
          "http://localhost:5002"
        ],
        "AllowedScopes": [
          "api-identity-service",
          "api-students-management-microservice"
        ],
        "Enabled": true
      }
    ]
  },
  "AllowedHosts": "*"
}
